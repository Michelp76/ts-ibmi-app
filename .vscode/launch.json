  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server/build/index.js",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/server/build/**/*.js"
      ],
      //"preLaunchTask": "npm: build:dev",
      "envFile": "${workspaceFolder}/server/.env"
    }
  ]
}